{
  "compilerOptions": {
    // Структура проекта
    "rootDir": "src",
    "outDir": "dist",

    // Среда (ESM под Node)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Удобства импорта
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    // Карты и декларации (декларации можно отключить, если это не библиотека)
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Строгий режим и скорость компиляции
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": ["src"]
}
