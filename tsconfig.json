{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@features/*": ["src/features/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@/*": ["src/*"]
    },

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    "allowImportingTsExtensions": false,   // оставим false (по умолчанию)
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}